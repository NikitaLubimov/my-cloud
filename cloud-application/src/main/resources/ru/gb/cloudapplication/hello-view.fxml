<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloudapplication.MainController">

    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выход" />
        </Menu>
        <Menu text="Настройки">
            <MenuItem text="Язык" />
        </Menu>
        <Menu text="Помощь">
            <MenuItem text="Помощи не будет, кодь сам" />
        </Menu>
    </MenuBar>
   <HBox alignment="CENTER_RIGHT" style="-fx-background-color: gray;">
         <HBox prefHeight="31.0" prefWidth="105.0" style="">
               <Label alignment="CENTER" prefHeight="27.0" prefWidth="110.0" text="MyCloud" textAlignment="RIGHT" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="18.0" />
                  </font>
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
               </Label>
         </HBox>
         <TextField alignment="CENTER_RIGHT" promptText="login" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></TextField>
         <TextField alignment="CENTER_RIGHT" promptText="password" HBox.hgrow="ALWAYS">
         <opaqueInsets>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </opaqueInsets>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></TextField>
         <Button mnemonicParsing="false" text="Войти">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></Button>
      </HBox>

    <HBox alignment="CENTER" style="-fx-background-color: gray;" VBox.vgrow="ALWAYS">
      <fx:include source="table.fxml" HBox.hgrow="ALWAYS" />
        <fx:include fx:id="serverTable" source="tableServer.fxml" HBox.hgrow="ALWAYS" />
      <VBox.margin>
         <Insets />
      </VBox.margin>
    </HBox>

    <HBox alignment="CENTER" style="-fx-background-color: gray;">
        <Button maxWidth="Infinity" onAction="#pushFail" text="Загрузить файл" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="5.0" />
         </HBox.margin></Button>
        <Button maxWidth="Infinity" onAction="#downFail" text="Скачать файл" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin></Button>
        <Button maxWidth="Infinity" text="Удалить файл" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin></Button>
        <Button maxWidth="Infinity" text="Закрыть соеденение" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin></Button>
      <padding>
         <Insets bottom="5.0" left="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
