<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.gb.cloudapplication.MainController">

    <MenuBar>
        <Menu text="Файл">
            <MenuItem text="Выход"/>
        </Menu>
        <Menu text="Настройки">
            <MenuItem text="Язык"/>
        </Menu>
        <Menu text="Помощь">
            <MenuItem text="Помощи не будет, кодь сам"/>
        </Menu>
    </MenuBar>

    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftTable" source="table.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightTable" source="table.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox spacing="5">
        <Button text="Загрузить файл" maxWidth="Infinity" HBox.hgrow="ALWAYS" onAction="#pushFail"/>
        <Button text="Скачать файл" maxWidth="Infinity" HBox.hgrow="ALWAYS" onAction="#downFail"/>
        <Button text="Удалить файл" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Закрыть соеденение" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</VBox>
