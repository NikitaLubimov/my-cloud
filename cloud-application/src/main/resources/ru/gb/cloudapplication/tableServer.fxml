<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloudapplication.ServerTableController">
    <HBox alignment="TOP_CENTER" fillHeight="false">
        <ComboBox fx:id="diskBox">
         <HBox.margin>
            <Insets right="5.0" top="5.0" />
         </HBox.margin></ComboBox>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="2.0" right="2.0" top="5.0" />
         </HBox.margin></TextField>
        <Button onAction="#upPath" text="Вверх">
         <HBox.margin>
            <Insets left="5.0" top="5.0" />
         </HBox.margin></Button>
      <VBox.margin>
         <Insets left="5.0" right="5.0" />
      </VBox.margin>
    </HBox>
    <TableView fx:id="tableViewServer" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets left="5.0" right="5.0" top="5.0" />
      </VBox.margin>
      <opaqueInsets>
         <Insets top="5.0" />
      </opaqueInsets></TableView>
</VBox>
